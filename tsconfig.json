{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["ES2019"],
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "hooks/*": ["./hooks/*"],
      "navigations/*": ["./navigations/*"],
      "store/*": ["./store/*"],
      "utils/*": ["./utils/*"],
      "components/*": ["./components/*"],
      "screens/*": ["./screens/*"],
      "types": ["./types"],
      "types/*": ["./types/*"]
    }
  },
  "include": [
    "src/index.ts",
    "src/hooks/**/*",
    "src/store/**/*",
    "src/utils/**/*",
    "src/components/**/*",
    "src/@types/**/*",
    "src/config.ts",
    "src/types.ts",
    "src/paths.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/screens",
    "src/navigations",
    "android",
    "ios"
  ]
}
